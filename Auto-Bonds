local startFlag = false 
local CD = false

local root = hum.RootPart

local start = root.Position
local endpos = Vector3.new(-424.443603515625, 29.518972396850586, -49040.59375)
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Remotes = ReplicatedStorage:WaitForChild("Remotes")
local RemotePromise = ReplicatedStorage:WaitForChild("Shared"):WaitForChild("Network"):WaitForChild("RemotePromise"):WaitForChild("Remotes")
local CollectBondNetwork = RemotePromise:WaitForChild("C_ActivateObject")

local collectedBond = 0

local antivoidLoop = nil
local noclipLoop = nil
--local hasChair = false

local function toggleAntiVoid(enabled)
	if enabled then
		antivoidLoop = RunService.Stepped:Connect(function()
			if root and root.Position.Y <= workspace.FallenPartsDestroyHeight + 100 then
				root.Velocity = root.Velocity + Vector3.new(0, 250, 0)
			end
		end)
	else
		if antivoidLoop then
			antivoidLoop:Disconnect()
			antivoidLoop = nil
		end
	end
end
local function toggleNoclip(enabled)
	if enabled then
		noclipLoop = RunService.Stepped:Connect(function()
			if char ~= nil then
				for _, child in pairs(char:GetDescendants()) do
					if child:IsA("BasePart") and child.CanCollide == true and child.Name ~= floatName then
						child.CanCollide = false
					end
				end
			end
		end)
	else
		if noclipLoop then
			noclipLoop:Disconnect()
			noclipLoop = nil
		end
	end
end

local train = nil
local trainSeat = nil

for _, v in pairs(Trains) do
	if workspace:FindFirstChild(v) then
		train = workspace:FindFirstChild(v)
		trainSeat = train.RequiredComponents.Controls.ConductorSeat:FindFirstChildWhichIsA("VehicleSeat")
	end
end

local function teleportToTrain()
	if trainSeat.Occupant == nil then
		trainSeat:Sit(hum)
		return true
	else
		return false
	end
end

local function stopIfNeeded()
	if not startFlag then
		toggleAntiVoid(false)
		toggleNoclip(false)
		root.CFrame = CFrame.new(start)
		return true
	end
	return false
end

local function updateBonds()
	collectedBond += 1
	Collected.Text = "Collected Bonds: " .. collectedBond
end

local function collectBond(model)
	if not model or model.Parent == nil then return end

	local collected = false
	local conn

	conn = model.AncestryChanged:Connect(function(_, parent)
		if not parent and not collected then
			collected = true
			updateBonds()
			if conn then conn:Disconnect() end
		end
	end)

	CollectBondNetwork:FireServer(model)

	task.delay(1.5, function()
		if conn then
			conn:Disconnect()
		end
	end)
end

local function getNearestItem(itemName)
	local item, lastDist = nil, math.huge
	for _, v in pairs(workspace.RuntimeItems:GetChildren()) do
		if v.Name == itemName and v:IsA("Model") and v:FindFirstChildWhichIsA("BasePart") then
			local dist = (v.PrimaryPart.Position - root.Position).Magnitude
			if dist < lastDist then
				item = v
				lastDist = dist
			end
		end
	end
	return item
end

local function searchItem(itemname)
	local newpos = start

	--[[if hasChair and not workspace.RuntimeItems:FindFirstChild(itemname) then
		local maxWait = 2
		local timer = 0
		task.spawn(function()
			while not hum.Sit and timer < maxWait do
				if stopIfNeeded() then break end
				root.CFrame = CFrame.new(start)
				task.wait(0.1)
				timer += 0.1
			end
		end)
		wait(.1)
		Remotes:WaitForChild("DropItem"):FireServer()

		local chair = getNearestItem("Chair")
		if chair then
			local chairSeat = chair:FindFirstChildWhichIsA("Seat")
			if chairSeat then chairSeat:Sit(hum) end
		end
		task.wait(0.2)
		if stopIfNeeded() then return end
		if not char:FindFirstChild("Sack") and plr.Backpack:FindFirstChild("Sack") then
			hum:EquipTool(plr.Backpack.Sack)
			task.wait(0.2)
		end

		if chair then
			Remotes:WaitForChild("StoreItem"):FireServer(chair)
		end
	end]]
	while not workspace.RuntimeItems:FindFirstChild(itemname) do
		if stopIfNeeded() then return end
		root.CFrame = CFrame.new(newpos, endpos)
		root.CFrame = root.CFrame * CFrame.new(0, 0, -100)
		newpos = root.Position
		task.wait(0.01)
	end
end

local function handleChair()
	if stopIfNeeded() then return end
	searchItem("Chair")
	local chair = workspace.RuntimeItems:FindFirstChild("Chair")
	if not chair then return end

	chair.PrimaryPart = chair.PrimaryPart or chair:FindFirstChildWhichIsA("BasePart")
	local seat = chair:FindFirstChildWhichIsA("Seat")
	local tik = 0

	while not hum.Sit and tik < 5 do
		if stopIfNeeded() then return end
		root.CFrame = CFrame.new(chair.PrimaryPart.Position)
		if seat then seat:Sit(hum) end
		tik += 0.01
		task.wait(0.01)
	end

	if not char:FindFirstChild("Sack") and plr.Backpack:FindFirstChild("Sack") then
		hum:EquipTool(plr.Backpack.Sack)
		task.wait(0.2)
	end

	Remotes:WaitForChild("StoreItem"):FireServer(chair)
	root.CFrame = CFrame.new(start)
	--hasChair = true
end

local function autoBond()
	local success, msg = pcall(function()
		while startFlag do
			if stopIfNeeded() then break end

			searchItem("Bond")
			local bond = getNearestItem("Bond")
			if not bond then break end

			if not bond.PrimaryPart then break end

			local distance = (bond.PrimaryPart.Position - root.Position).Magnitude
			local chair = nil
			local unstoredChair = false 

			if distance > 8 then
				if stopIfNeeded() then break end
				unstoredChair = true

				root.CFrame = CFrame.new(bond.PrimaryPart.Position + Vector3.new(0, 1, 0))
				Remotes:WaitForChild("DropItem"):FireServer()

				chair = getNearestItem("Chair")
				if chair then
					local chairSeat = chair:FindFirstChildWhichIsA("Seat")
					if chairSeat then chairSeat:Sit(hum) end
				end
			end

			task.wait(0.2)
			if stopIfNeeded() then break end

			collectBond(bond)

			if not char:FindFirstChild("Sack") and plr.Backpack:FindFirstChild("Sack") then
				hum:EquipTool(plr.Backpack.Sack)
				task.wait(0.2)
			end

			if unstoredChair and chair then
				Remotes:WaitForChild("StoreItem"):FireServer(chair)
			end
		end
	end)

	if not success then
		warn("Error in auto Bond:", msg)
	end
end

local function toggleStartbtn(bool)
	if bool then
		Button.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
		Button.Text = "Stop"
		TS:Create(UiGrad, TweenInfo.new(0.3, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {Rotation = -90}):Play()
	else
		Button.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
		Button.Text = "Start"
		TS:Create(UiGrad, TweenInfo.new(0.3, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {Rotation = 90}):Play()
	end
end

Button.MouseButton1Click:Connect(function()
	if CD then return end
	CD = true
	task.delay(0.1, function()
		CD = false
	end)
	if not startFlag then
		startFlag = true
		start = root.Position
		Warn.Visible = true
		toggleStartbtn(true)
		toggleAntiVoid(true)
		toggleNoclip(true)
		handleChair()
		autoBond()
	else
		startFlag = false
		toggleStartbtn(false)
		stopIfNeeded()
		Warn.Visible = false
	end
end)

Reset.MouseButton1Click:Connect(function()
	Frame.Position = UDim2.new(0.5, 0, 1.5, 0)
	TS:Create(Frame, TweenInfo.new(0.5, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {Position = UDim2.new(0.5, 0, 0.5, 0)}):Play()
end)

Frame.Position = UDim2.new(0.5, 0, 1.5, 0)
wait(0.5)
TS:Create(Frame, TweenInfo.new(0.5, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {Position = UDim2.new(0.5, 0, 0.5, 0)}):Play()
